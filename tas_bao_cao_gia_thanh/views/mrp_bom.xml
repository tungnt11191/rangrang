<?xml version="1.0"?>
<odoo>
    <record id="tas_mrp_bom_cost_driver_view_form_inherit" model="ir.ui.view">
        <field name="name">tas.mrp.bom.view.form.inherit.plm</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
             <xpath expr="//page[@name='components']" position="after">
                 <page string="Cost Driver" name="cost_driver">
                    <field name="cost_driver_ids">
                        <tree editable="bottom">
                            <field name="cost_driver_id"/>
                            <field name="planned_count"/>
                            <field name="planned_cost_per_unit"/>
                            <field name="actual_count"/>
                            <field name="complete_percentage"/>
                            <field name="actual_cost_per_unit"/>
                            <field name="uom_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>