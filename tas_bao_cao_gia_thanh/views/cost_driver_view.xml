<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_tas_cost_driver_form" model="ir.ui.view">
      <field name="name">Cost Driver</field>
      <field name="model">tas.cost.driver</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="code"/>
                <field name="uom_id"/>
              </group>
              <group>
                <field name="work_center_id" />
                <field name="computation" />
<!--                <field name="debit_account_id"/>-->
<!--                <field name="credit_account_id"/>-->
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_tas_cost_driver_tree" model="ir.ui.view">
      <field name="name">Cost Driver</field>
      <field name="model">tas.cost.driver</field>
      <field name="arch" type="xml">
        <tree string="Cost Driver" default_order="id desc">
            <field name="name"/>
            <field name="code"/>
            <field name="uom_id" />
            <field name="computation" />
<!--          <field name="debit_account_id" />-->
<!--          <field name="credit_account_id" />-->
        </tree>
      </field>
    </record>

    <record id="action_tas_cost_driver" model="ir.actions.act_window">
      <field name="name">Cost driver</field>
      <field name="res_model">tas.cost.driver</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create new Record
        </p>
      </field>
    </record>
    <menuitem id="menu_tas_cost_driver" action="action_tas_cost_driver" name="Cost driver"  parent="mrp.menu_mrp_configuration" sequence="10" groups="mrp.group_mrp_routings"/>
  </data>
</odoo>
