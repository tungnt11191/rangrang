<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_users_view_form" model="ir.ui.view">
        <field name="name">res.users.form.view</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="after">
                <page string="Warehouses Users" groups="stock.group_stock_user">
                    <group>
                        <field name="allowed_warehouse" widget="many2many_tags"/>
                        <field name="show_users" groups="stock.group_stock_manager"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="view_stock_warehouse_restrict">
        <field name="name">warehouse.config.restrict.form.view</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.view_warehouse"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="users_allowed" groups="stock.group_stock_manager"/>
            </field>
        </field>
    </record>
</odoo>
