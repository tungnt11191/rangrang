<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="restrict_user_stock_warehouse" model="ir.rule">
        <field name="name">Config User Stock Warehouse</field>
        <field name="model_id" ref="stock.model_stock_warehouse"/>
        <field name="domain_force">[('id','in',user.allowed_warehouse.ids)]</field>
        <field name="groups" eval="[(4,ref('stock.group_stock_user'))]"/>
    </record>

    <record id="restrict_manager_stock_warehouse" model="ir.rule">
        <field name="name">Config Manager Stock Warehouse</field>
        <field name="model_id" ref="stock.model_stock_warehouse"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4,ref('stock.group_stock_manager'))]"/>
    </record>

    <record id="restrict_user_stock_picking_type" model="ir.rule">
        <field name="name">Config User Stock Picking Type</field>
        <field name="model_id" ref="stock.model_stock_picking_type"/>
        <field name="domain_force">[('warehouse_id.id','in',user.allowed_warehouse.ids)]</field>
        <field name="groups" eval="[(4,ref('stock.group_stock_user'))]"/>
    </record>

    <record id="restrict_manager_stock_picking_type" model="ir.rule">
        <field name="name">Config Manager Stock Picking Type</field>
        <field name="model_id" ref="stock.model_stock_picking_type"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4,ref('stock.group_stock_manager'))]"/>
    </record>

    <record id="restrict_user_stock_picking" model="ir.rule">
        <field name="name">Config User Stock Picking</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="domain_force">[('picking_type_id.warehouse_id.id','in',user.allowed_warehouse.ids)]</field>
        <field name="groups" eval="[(4,ref('stock.group_stock_user'))]"/>
    </record>

    <record id="restrict_manager_stock_picking" model="ir.rule">
        <field name="name">Config Manager Stock Picking</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4,ref('stock.group_stock_manager'))]"/>
    </record>

</odoo>