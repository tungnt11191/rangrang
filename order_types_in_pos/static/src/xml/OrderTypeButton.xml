<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderTypeButton" owl="1">
        <span class="control-button">
            <i class="fa fa-tag"></i>
            <span t-if="env.pos.get_order().get_delivery_type() > 0">
                <span id="order_type_id"><t t-esc="env.pos.get_delivery_type_name(env.pos.get_order().get_delivery_type())" /></span>
            </span>
            <span t-else="" >
                <span id="order_type_id">Order Type</span>
            </span>

        </span>
    </t>

</templates>
