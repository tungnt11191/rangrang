<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="cron_reset_balance_gift_card_every_month" model="ir.cron">
            <field name="name">Gift Card: reset balance every month</field>
            <field name="model_id" ref="gift_card.model_gift_card"/>
            <field name="state">code</field>
            <field name="code">model._cron_reset_balance()</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
             <field name="nextcall" eval="(datetime.now().replace(hour=0, minute=0)).strftime('%Y-%m-%d %H:%M:%S')" />
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

    </data>
</odoo>
