<?xml version="1.0" encoding="UTF-8"?>
<templates>
  <t t-name="overview_xnt_dashboard_tung">
    <div class="clearfix"></div>
    <div style="padding: 10px 10px; background-color: white;">
      <div class="row">
        <div class="col-md-12" style="text-align: center;">
          <h3>
            BÁO CÁO CHI TIẾT PHIẾU XUẤT NHẬP KHO
          </h3>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label >Ngày bắt đầu</label>
            <input id="pro_start_date" type="date" name="bday" max="30002-31" min="1000-01-01" class="form-control"/>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label >Ngày kết thúc</label>
            <input id="pro_end_date" type="date" name="bday" min="2000-01-01" max="30002-31" class="form-control"/>
          </div>
        </div>
        <div class="col-md-3">
          <label >Sản Phẩm</label>
          <div class="product-container">
            <select id="product_selectbox" style="padding-top:11px;"></select>
          </div>
        </div>
        <div class="col-md-3">
          <label >Địa Điểm Kho</label>
          <div class="overview-location-container">
            <select id="overview_location_selectbox" style="padding-top:11px;"></select>
          </div>
        </div>
        <div class="col-md-3">
          <button class="btn btn-primary o-kanban-button-new" type="button" id="quet_du_lieu">
            <span>Lấy báo cáo</span>
          </button>
        </div>
      </div>

      <!-- Nhap hang -->
      <hr/>
      <div class="row">
        <div class="col-md-2">
          <label >Tổng nhập NCC (N1)</label>
          <div id="tongnhapncc">
            0
          </div>
        </div>
        <div class="col-md-2">
          <label >Nhập nội bộ (N2)</label>
          <div id="nhapnoibo">
            0
          </div>
        </div>
      </div>
      <!-- Xuat hang -->
      <hr/>
      <div class="row">
        <div class="col-md-2">
          <label>Xuất định lượng (X1)</label>
          <div id="trahangncc">
            0
          </div>
        </div>
        <div class="col-md-2">
          <label >Xuất trả (X2)</label>
          <div id="xuatsanxuat">
            0
          </div>
        </div>
        <div class="col-md-2">
          <label >Xuất hủy (X3)</label>
          <div id="slsanxuatnhapkho">
            0
          </div>
        </div>
        <div class="col-md-2">
          <label >Xuất khác (X4)</label>
          <div id="xuatkhac">
            0
          </div>
        </div>
      </div>
      <hr/>
      <div class="row" style="font-weight: bold; font-size: 14px;">
        <div class="col-md-3">
          <label >Tổng nhập (N1+N2)</label>
          <div id="tongnhap">
            0
          </div>
        </div>
        <div class="col-md-3">
          <label >Tổng xuất (X1+X2+X3+X4)</label>
          <div id="tongxuat">
            0
          </div>
        </div>
        <div class="col-md-3">
          <label >Số dư</label>
          <div id="sodu">
            0
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12" style="margin-top: 15px;">
          <table id="internal_stock_move" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>Số Chứng Từ</th>
                <th>Ngày Chứng Từ</th>
                <th>Loại phiếu</th>
                <th>SL</th>
                <th>ĐVT</th>
                <th>Giá trị</th>
                <th>Kho Xuất Vật Tư</th>
                <th>Kho Nhập Vật Tư</th>
                <th>Mã VT</th>
                <!-- <th>Tên Vật Tư</th> -->
              </tr>
            </thead>
          </table>
        </div>
      </div>

    </div>

  </t>
</templates>
