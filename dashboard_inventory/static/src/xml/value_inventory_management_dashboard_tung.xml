                <th>X2</th>
                <th>GTX2</th>
                <th>X3</th>
                <th>GTX3</th>
                <th>X4</th>
                <th>GTX4</th>
                <th>SL Nhập</th>
                <th>GT Nhập</th>
                <th>SL Xuất</th>
                <th>GT Xuất</th>
                <th>SL Tồn Cuối</th>
                <th>GT Tồn Cuối</th>
              </tr>
            </thead>
            <tfoot align="right">
                <tr>
                  <th></th>
