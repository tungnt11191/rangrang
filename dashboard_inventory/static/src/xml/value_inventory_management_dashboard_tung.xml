<?xml version="1.0" encoding="UTF-8"?>
<templates >
  <t t-name="value_xnt_dashboard_tung">
    <div class="clearfix"></div>
    <div style="margin-top: 20px; margin-bottom:20px; padding: 10px 10px; background-color: white; overflow-y:scroll;height:100%">
      <div class="row">
        <div class="col-md-12" style="text-align: center; padding-top: 15px;padding-bottom: 15px;">
          <h3>
            BÁO CÁO XUẤT NHẬP TỒN GỒM GIÁ TRỊ HÀNG
          </h3>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <label >Ngày bắt đầu</label>
            <input id="start_date" type="date" name="bday" max="3000-12-31" min="1000-01-01" class="form-control"/>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group">
            <label >Ngày kết thúc</label>
            <input id="end_date" type="date" name="bday" min="2000-01-01" max="3000-12-31" class="form-control"/>
          </div>
        </div>

        <div class="col-md-4">
          <label >Địa điểm kho</label>
          <div class="locations-container">
            <select id="locations_selectbox" style="padding-top: 11px;">
              <option value="-1">--- Chọn địa điểm ---</option>
            </select>
          </div>
        </div>

        <div class="col-md-4">
          <div class="form-group" style="margin-left: 1.5rem;">
            <input type="checkbox" class="form-check-input" id="include_sub_location" checked="true"/>
