<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
        <record id="view_users_form_inherit" model="ir.ui.view">
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page" position="inside">
                    <field name="token_ids">
                        <tree create="false">
                            <field name="token"/>
                        </tree>
                    </field>
                </xpath>
                 <xpath expr="//group//field[@name='partner_id']" position="after">
                    <field name="sellerCode"/>
                 </xpath>
            </field>
        </record>

       <record id="view_users_sv_sellerCode_tree" model="ir.ui.view">
            <field name="name">res.users.tree.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='login']" position="after">
                    <field name="sellerCode"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>