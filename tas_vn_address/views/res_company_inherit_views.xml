<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_company_inherit_form_view" model="ir.ui.view">
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state_id']" position="replace">
                    <field name="province_id" class="o_address_state" placeholder="Province" options='{"no_open": True}'/>
                </xpath>
                <xpath expr="//field[@name='city']" position="replace">
                    <field name="district_id" class="o_address_city" placeholder="District" options='{"no_open": True}'/>
                    <field name="ward_id" class="o_address_city" placeholder="Ward" options='{"no_open": True}'/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>