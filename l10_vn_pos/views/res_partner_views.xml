<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_partner_gift_card_form" model="ir.ui.view">
        <field name="name">res.partner.gift.card.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_gift_card" context="{'default_partner_id': active_id}" attrs="{'invisible': [('gift_card_count', '=', 0)]}" icon="fa-gift">
                    <field string="Gift Card" name="gift_card_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

</odoo>
