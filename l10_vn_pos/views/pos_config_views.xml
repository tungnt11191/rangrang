<odoo>
    <data>
        <record id="view_pos_config_sequence_tree" model="ir.ui.view">
            <field name="name">pos.config.sequence</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="sequence" optional="show" widget="handle"/>
                </xpath>
            </field>
        </record>

        <record id="view_pos_config_qr_form" model="ir.ui.view">
            <field name="name">pos.config.qr</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='receipt']//div[@id='order_reference']" position="after">
                    <div id="qr_code" class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">QR Code</span>
                            <field name="qr_code" widget='image' class="oe_avatar"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>