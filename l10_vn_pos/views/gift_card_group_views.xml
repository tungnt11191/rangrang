<odoo>
    <data>
        <record id="view_gift_card_group_tree" model="ir.ui.view">
            <field name="name">gift.card.group.tree</field>
            <field name="model">gift.card.group</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="action_gift_card_group_view" model="ir.actions.act_window">
            <field name="name">Gift Card Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">gift.card.group</field>
            <field name="view_id" ref="l10_vn_pos.view_gift_card_group_tree"/>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new record.
              </p>
            </field>
        </record>

        <menuitem id="gift_card_group_menu" sequence="11" name="Gift Card Groups" action="l10_vn_pos.action_gift_card_group_view" parent="point_of_sale.menu_point_config_product"/>

    </data>
</odoo>