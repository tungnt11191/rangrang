<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt')]" position="replace">
            <div class="pos-receipt">
                <div width="100%" >
                    <t t-if="receipt.company.name">
                        <b style="font-size:140%"><t t-esc="receipt.company.name" /></b>
                    </t>
                    <div width="100%" style="font-size:80%;">
                        <t t-if="receipt.header_html">
                            <t t-raw="receipt.header_html" />
                        </t>
                        <t t-if="!receipt.header_html and receipt.header">
                            <div style="white-space:pre-line"><t t-esc="receipt.header" /></div>
                        </t>
                        <t t-if="receipt.company.phone">
                            <div>Hotline: <t t-esc="receipt.company.phone" /></div>
                        </t>
                    </div>
                    <br/>
                </div>
                <t style="font-size:140%">
                    <b>HÓA ĐƠN BÁN HÀNG</b>
                </t>
                <div style="line-height: 1.3;" width="100%">
                    <t t-if="receipt.name">
                        <t t-esc="receipt.name"/>
                    </t>
                    <div>Ngày bán:
                        <t t-if="receipt.date.validation_date">
                            <t t-esc="receipt.date.validation_date" />
                        </t>
                    </div>
                    <div>Khách hàng:
                        <t t-if="receipt.client.name">
                            <t t-esc="receipt.client.name"/>
                        </t>
                    </div>
<!--                    <div>Điện thoại:-->
<!--                        <t t-if="receipt.client.phone">-->
<!--                            <t t-esc="receipt.client.phone"/>-->
<!--                        </t>-->
<!--                    </div>-->
                    <div>Điểm tích lũy:
                        <t t-if="receipt.client.loyalty_points">
                            <t t-esc="receipt.client.loyalty_points"/>
                        </t>
                    </div>
                    <div>Người bán:
                        <t t-if="receipt.cashier">
                            <t t-esc="receipt.cashier"/>
                        </t>
                    </div>
                </div>
                <br/>
                <table style="font-size:80%;border: 1.5px solid;padding: 0.5%;">
                    <colgroup>
                        <col style="padding: 0.5%;border-right: 1.5px solid" width='55%'/>
                        <col style="padding: 0.5%;border-right: 1.5px solid" width='10%'/>
                        <col style="padding: 0.5%;border-right: 1.5px solid" width='15%'/>
                        <col style="padding: 0.5%;" width='20%'/>
                    </colgroup>
                    <tr style="padding: 0.5%;border: 1.5px solid">
                        <th style="padding: 0.5%;border: 1.5px solid">Tên món</th>
                        <th style="padding: 0.5%;border: 1.5px solid">Số lượng</th>
                        <th style="padding: 0.5%;border: 1.5px solid">Đơn giá</th>
                        <th style="padding: 0.5%;border: 1.5px solid">Thành tiền</th>
                    </tr>
                    <tr style="padding: 0.5%;border-bottom: 1.5px dotted" t-foreach="receipt.orderlines" t-as="line" t-key="line.id">
                        <td style="padding: 0.5%;border-bottom: 1.5px dotted">
                            <t t-esc="line.product_name_wrapped[0]"/>
                            <WrappedProductNameLines line="line" />
                            <t t-if="line.customer_note">
                                <div class="pos-receipt-left-padding pos-receipt-customer-note">
                                    (<t t-esc="line.customer_note"/>)
                                </div>
                            </t>

                        </td>
                        <td style="padding: 0.5%;text-align:center;border-bottom: 1.5px dotted">
                            <t t-if="isSimple(line)">
                                <span>1</span>
                            </t>
                            <t t-else="">
                                <t t-if="Math.round(line.quantity) != 0">
                                    <t t-esc="Math.round(line.quantity)" style='text-align:center'/>
                                </t>
                                <t t-else="">
                                    <t>-&#160;&#160;&#160;</t>
                                </t>
                            </t>
                        </td>
                        <td style="padding: 0.5%;text-align:right;border-bottom: 1.5px dotted">
                            <t t-if="env.pos.format_currency_no_symbol(line.price_display_one) != 0">
                                <t t-esc="env.pos.format_currency_no_symbol(line.price_display_one)" />
                            </t>
                            <t t-else="">
                                <t>-&#160;&#160;&#160;</t>
                            </t>
                        </td>
                        <td style='padding: 0.5%;text-align:right;border-bottom: 1.5px dotted'>
                            <t t-if="env.pos.format_currency_no_symbol(line.price_display) != 0">
                                <t t-esc="env.pos.format_currency_no_symbol(line.price_display)"/>
                            </t>
                            <t t-else="">
                                <t>-&#160;&#160;&#160;</t>
                            </t>
                        </td>
                    </tr>
                </table>
                <!-- Orderlines -->
<!--                <div class="orderlines">-->
<!--                    <t t-call="OrderLinesReceipt"/>-->
<!--                </div>-->

                <!-- Subtotal -->
                <div style="line-height: 1.3;" width="100%">
<!--                    <t t-if="!isTaxIncluded">-->
<!--                        <br/>-->
<!--                        <div>Tổng tiền hàng-->
<!--                            <t t-esc="env.pos.format_currency(receipt.subtotal)" class="pos-receipt-right-align"/>-->
<!--                        </div>-->
<!--                        <t t-foreach="receipt.tax_details" t-as="tax" t-key="tax.name">-->
<!--                            <div class="responsive-price">-->
<!--                                <t t-esc="tax.name" />-->
<!--                                <span t-esc='env.pos.format_currency_no_symbol(tax.amount)' class="pos-receipt-right-align"/>-->
<!--                            </div>-->
<!--                        </t>-->
<!--                    </t>-->

                    <br/>
                    <div>Tổng tiền hàng:
                        <span t-esc="env.pos.format_currency(receipt.subtotal)" class="pos-receipt-right-align"/>
                    </div>

                    <!-- Total -->
<!--                    <div class="pos-receipt-right-align">&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;</div><br/>-->
                    <div> Chiết khấu:
                        <t t-if="receipt.total_discount">
                            <span t-esc="env.pos.format_currency(receipt.total_discount)" class="pos-receipt-right-align"/>
                        </t>
                        <div><b>Tổng cộng:</b>
                            <b><span t-esc="env.pos.format_currency(receipt.total_with_tax)" class="pos-receipt-right-align"/></b>
                    </div>
                    </div>

                    <t t-if="receipt.total_rounded != receipt.total_with_tax">
                        <div>
                            Làm tròn:<span t-esc='env.pos.format_currency(receipt.rounding_applied)' class="pos-receipt-right-align"/>
                        </div>
                        <br/>
                        <div>
                            <b>Thành tiền:<span t-esc='env.pos.format_currency(receipt.total_rounded)' class="pos-receipt-right-align"/></b>
                        </div>
                    </t>
                        <!-- Payment Lines -->

                    <t t-foreach="receipt.paymentlines" t-as="line" t-key="line.cid">
                        <div>
                            Phương thức thanh toán: <span class="pos-receipt-right-align" t-esc="line.name"/>
                        </div>
                        <div>
                            Tiền khách trả: <span t-esc="env.pos.format_currency(line.amount)" class="pos-receipt-right-align"/>
                        </div>
                    </t>
                        <div>
                        Tiền thừa trả khách: <span t-esc="env.pos.format_currency(receipt.change)" class="pos-receipt-right-align"/>
                    </div>

                        <!-- Extra Payment Info -->

<!--                    <t t-if="isTaxIncluded">-->
<!--                        <t t-foreach="receipt.tax_details" t-as="tax" t-key="tax.name">-->
<!--                            <div>-->
<!--                                <t t-esc="tax.name" />-->
<!--                                <span t-esc="env.pos.format_currency_no_symbol(tax.amount)" class="pos-receipt-right-align"/>-->
<!--                            </div>-->
<!--                        </t>-->
<!--                        <div>-->
<!--                            Tổng thuế-->
<!--                            <span t-esc="env.pos.format_currency(receipt.total_tax)" class="pos-receipt-right-align"/>-->
<!--                        </div>-->
<!--                    </t>-->
                </div>

                <div class="before-footer" />
                <br/>

                <!-- Footer -->
                <div style="text-align: center;font-size:80%" width="100%">
                    <div t-if="receipt.footer_html"  class="pos-receipt-center-align">
                        <t t-raw="receipt.footer_html" />
                    </div>

                    <div t-if="!receipt.footer_html and receipt.footer"  class="pos-receipt-center-align" style="white-space:pre-line">
                        <br/>
                        <t t-esc="receipt.footer" />
                        <br/>
                        <br/>
                    </div>
                </div>
                <div class="pos-receipt-center-align">
                    <t>
                        <img style="width:50%; height:auto" src='/l10_vn_pos/static/description/qr_code_3.jpg' class="pos-receipt-logo"/>
                    </t>
                </div>
            </div>
        </xpath>

    </t>
</templates>
